{
  "name": "kenwandererhaven",
  "version": "0.0.1",
  "license": "AGPL3",
  "description": "Kenwanderer Haven is a Gloomhaven/Frosthaven Companion app.",
  "homepage": "https://gloomhaven.kenwanderers.com",
  "author": {
    "name": "Laydo",
    "email": "laydo@apollosarcade.com",
    "url": "https://www.apollosarcade.com"
  },
  "repository": "github:Kenwanderers/kenwandererhaven",
  "bugs": "https://github.com/Kenwanderers/kenwandererhaven/issues",
  "main": "main.js",
  "nodemonConfig": {
    "execMap": {
      "js": "node ./scripts/build-data.js"
    },
    "watch": [
      "data/"
    ],
    "ext": "json",
    "runOnChangeOnly": true
  },
  "scripts": {
    "prepare": "husky",
    "prestart": "node ./scripts/build-data.js",
    "start": "ng serve",
    "prebuild": "node ./scripts/build-data.js && node ./scripts/pre-build.js",
    "build": "ng build",
    "custom-build": "node custom-build.js",
    "postbuild": "node ./scripts/post-build.js",
    "pretest": "node ./scripts/build-data.js",
    "test": "ng test",
    "watch": "nodemon",
    "electron": "npm run build -- --base-href ./ && electron .",
    "electron:build": "npm run build -- --base-href ./ && electron-builder"
  },
  "build": {
    "appId": "kenwandererhaven",
    "linux": {
      "target": [
        "AppImage",
        "rpm",
        "deb"
      ],
      "publish": [
        "github"
      ]
    },
    "mac": {
      "type": "distribution",
      "target": [
        "dmg",
        "pkg"
      ],
      "publish": [
        "github"
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico",
      "publish": [
        "github"
      ]
    },
    "files": [
      "main.js",
      "dist/kenwandererhaven"
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^18.2.4",
    "@angular/cdk": "^18.2.4",
    "@angular/common": "^18.2.4",
    "@angular/compiler": "^18.2.4",
    "@angular/core": "^18.2.4",
    "@angular/forms": "^18.2.4",
    "@angular/platform-browser": "^18.2.4",
    "@angular/platform-browser-dynamic": "^18.2.4",
    "@angular/router": "^18.2.4",
    "@angular/service-worker": "^18.2.4",
    "autocompleter": "^9.3.2",
    "leaflet": "^1.9.4",
    "mermaid": "^10.9.1",
    "ng-in-viewport": "^16.1.0",
    "rxjs": "~7.8.1",
    "tslib": "^2.7.0",
    "uuid": "^10.0.0",
    "zone.js": "~0.14.10"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.2.4",
    "@angular/cli": "^18.2.4",
    "@angular/compiler-cli": "^18.2.4",
    "@types/d3": "^7.4.3",
    "@types/dom-screen-wake-lock": "1.0.3",
    "@types/dompurify": "^3.0.5",
    "@types/jasmine": "~5.1.4",
    "@types/leaflet": "^1.9.12",
    "@types/uuid": "^10.0.0",
    "electron": "^32.1.0",
    "electron-builder": "^25.0.5",
    "http-server": "^14.1.1",
    "husky": "^9.1.6",
    "jasmine-core": "~5.3.0",
    "karma": "~6.4.4",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "nodemon": "^3.1.4",
    "typescript": "~5.5.4"
  }
}
